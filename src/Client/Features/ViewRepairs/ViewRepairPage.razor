@page "/repairs"
@inject HttpClient _httpClient
@attribute [Authorize]

<PageTitle>View Repairs</PageTitle>

<h1>View Repairs</h1>

<Card>
    @if (_repairs == null)
    {
        <p>Loading repairs...</p>
    }
    else
    {
        <AuthorizeView Roles="Planner">
            <Authorized>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Issue</th>
                            <th>Trade</th>
                            <th>Contact Number</th>
                            <th>Complete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in _repairs)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Issue</td>
                                <td>@item.Trade</td>
                                <td>@item.ContactNumber</td>
                                <td>@(item.Complete ? "Yes" : "No")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </Authorized>
            <NotAuthorized>
                <h3>Not Authorized</h3>
                <p>You do not have permissions to view this area.</p>
            </NotAuthorized>
        </AuthorizeView>
    }
</Card>

@code {

    List<RepairModel> _repairs = new List<RepairModel>();

    protected override async Task OnInitializedAsync()
    {
        _repairs = await _httpClient.GetFromJsonAsync<List<RepairModel>>("/api/repairs");
    }
}
